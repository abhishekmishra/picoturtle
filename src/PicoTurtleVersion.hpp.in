/**
 * @file PicoTurtleVersion.hpp.in
 * @author Abhishek Mishra
 * @brief Defines version information for PicoTurtle, using cmake configure_file 
 */

//NOTE!: Do not save this file with formatting.
//If there is space added before or after @, then variable replacement
//will be incorrect.

#define PICOTURTLE_VERSION_MAJOR @PICOTURTLE_VERSION_MAJOR@
#define PICOTURTLE_VERSION_MINOR @PICOTURTLE_VERSION_MINOR@
#define PICOTURTLE_VERSION_PATCH @PICOTURTLE_VERSION_PATCH@
#define PICOTURTLE_VERSION_PRERELEASE @PICOTURTLE_VERSION_PRERELEASE@

#define EXPAND_AND_STRINGIFY(s) STRINGIFY(s)
#define STRINGIFY(s) #s

#define PICOTURTLE_VERSION_MAJOR_STR EXPAND_AND_STRINGIFY(PICOTURTLE_VERSION_MAJOR)
#define PICOTURTLE_VERSION_MINOR_STR EXPAND_AND_STRINGIFY(PICOTURTLE_VERSION_MINOR)
#define PICOTURTLE_VERSION_PATCH_STR EXPAND_AND_STRINGIFY(PICOTURTLE_VERSION_PATCH)
#define PICOTURTLE_VERSION_PRERELEASE_STR EXPAND_AND_STRINGIFY(PICOTURTLE_VERSION_PRERELEASE)

#define PICOTURTLE_VERSION_STR PICOTURTLE_VERSION_MAJOR_STR "." PICOTURTLE_VERSION_MINOR_STR "." PICOTURTLE_VERSION_PATCH_STR PICOTURTLE_VERSION_PRERELEASE_STR